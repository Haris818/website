        .categories-header {
            position: relative;
            text-align: center;
        }

            .categories-header h1 {
                font-size: 2.5rem;
                color: #333;
                margin: 0;
                padding: 0;
                display: inline-block;
                position: relative;
                cursor: pointer;
                overflow: hidden;
                transition: all 0.3s ease-in-out;
                font: bold;
            }

                .categories-header h1::before {
                    content: '';
                    position: absolute;
                    left: 0;
                    bottom: 0;
                    width: 100%;
                    height: 3px;
                    background: linear-gradient(to right, #ff6b6b, #f8e71c, #6bc1ff);
                    transform: scaleX(0);
                    transform-origin: left;
                    transition: transform 0.4s ease;
                }

                .categories-header h1:hover::before {
                    transform: scaleX(1);
                }

                .categories-header h1:hover {
                    color: #ff6b6b;
                }

                .categories-header h1:active {
                    transform: scale(0.95);
                }

                /* Smooth animation on focus without keyframes */
                .categories-header h1:focus {
                    outline: none;
                    box-shadow: 0 0 10px rgba(255, 107, 107, 0.8);
                    transform: translateY(-2px);
                    transition: transform 0.2s ease, box-shadow 0.3s ease;
                }

        .categories-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between; /* Equal spacing between cards */
            padding: 20px;
            gap: 20px;
            max-width: 1200px; /* Container width restriction */
            margin: 0 auto; /* Center container */
        }

        .category-card {
            flex: 1 1 calc(25% - 20px); /* 25% width per card, accounting for gap */
            max-width: calc(25% - 20px); /* Ensures cards don't exceed 25% width */
            background-color: white;
            border: 1px solid #ddd;
            border-radius: 8px;
            overflow: hidden;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .category-card:hover {
                transform: translateY(-10px);
                box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
            }

            .category-card img {
                width: 100%;
                height: 200px;
                object-fit: cover;
            }

            .category-card .card-content {
                padding: 15px;
                text-align: center;
            }

                .category-card .card-content h3 {
                    margin: 10px 0;
                    font-size: 1.5rem;
                    color: #333;
                }

                .category-card .card-content p {
                    margin: 0;
                    color: #666;
                }

                .category-card .card-content a {
                    display: inline-block;
                    margin-top: 10px;
                    padding: 10px 20px;
                    background-color: #4CAF50;
                    color: white;
                    text-decoration: none;
                    border-radius: 5px;
                    transition: background-color 0.3s ease;
                }

                    .category-card .card-content a:hover {
                        background-color: #45a049;
                    }
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
